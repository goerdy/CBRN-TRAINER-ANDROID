<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cloud-Einstellungen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server-URL:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/urlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- CO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CO Alarmschwellen (ppm):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/coA1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/coA2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- CH₄ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CH₄ Alarmschwellen (%UEG):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/ch4A1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/ch4A2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- CO₂ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CO₂ Alarmschwellen (VOL%):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/co2A1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/co2A2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- iBut -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="iBut Alarmschwellen (ppm):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/ibutA1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/ibutA2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- Nona -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nona Alarmschwellen (%UEG):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/nonaA1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/nonaA2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- H₂S -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H₂S Alarmschwellen (ppm):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/h2sA1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/h2sA2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- NH₃ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NH₃ Alarmschwellen (ppm):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/nh3A1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/nh3A2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <!-- O₂ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O₂ Alarmschwellen (VOL%):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A1:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/o2A1LowInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Untere"
                    android:inputType="numberDecimal"/>

                <EditText
                    android:id="@+id/o2A1HighInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Obere"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A2:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/o2A2LowInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Untere"
                    android:inputType="numberDecimal"/>

                <EditText
                    android:id="@+id/o2A2HighInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Obere"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Dosisleistung -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosisleistung Alarmschwellen (µSv/h):"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/dosisleistungA1Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A1"
                android:inputType="numberDecimal"/>

            <EditText
                android:id="@+id/dosisleistungA2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="A2"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speichern"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zurück"/>

    </LinearLayout>
</ScrollView> 