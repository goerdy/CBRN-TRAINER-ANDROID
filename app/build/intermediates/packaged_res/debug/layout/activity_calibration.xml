<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/calibrationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beacon Kalibrierung"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drücken Sie Start, wenn Sie bereit sind.\n\nHalten Sie das Gerät dann einen Meter vom Beacon entfernt."
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/calibrationTitle"/>

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/instructionTextView"/>

    <TextView
        android:id="@+id/rssiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/countdownTextView"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kalibrierung starten"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/rssiTextView"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zurück"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/startButton"/>

</androidx.constraintlayout.widget.ConstraintLayout> 